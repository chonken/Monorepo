---
interface Props {
  class?: string
}
import { mergeClasses } from '../utils'
const { class: className = '', ...rest } = Astro.props

const classList = mergeClasses(className, ['ch-illi'])
---

<li class:list={classList} {...rest}>
  <div class="ch-illi-i"><slot name="icon" /></div>
  <div class="ch-illi-x">
    <div class="ch-illi-t"><slot name="title" /></div>
    <slot />
  </div>
</li>

<style is:global>
  .ch-illi {
    display: flex;
  }
  .ch-illi-i {
    position: relative;
    z-index: 2;
    flex-shrink: 0;
  }
  .ch-illi-i img {
    display: block;
    height: calc(var(--ih) * 2) !important;
  }
  .ch-illi-x {
    position: relative;
    padding-left: var(--gap);
    flex-grow: 1;
    z-index: 1;
  }
  .ch-illi-t {
    position: relative;
    display: flex;
    align-items: center;
    margin-bottom: calc((var(--ih) - 1.5em) / 2);
    line-height: 1.5;
    height: var(--ih);
  }
  .ch-illi-t::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: calc(100% + var(--gap) + var(--ih));
    border-bottom: 1px solid #bbb;
  }
</style>
