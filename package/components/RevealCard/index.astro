---
import { mergeClasses } from '../../utils'
interface Props {
  class?: string
  background?: string
  backgroundHover?: string
  mobile?: 'md' | 'sm' | 'xs' | '2xl' | 'none'
}
const { class: className = '', background = '#eee8', backgroundHover = background, mobile = 'none', ...rest } = Astro.props

const styleList = {
  '--bg': background,
  '--bg-h': backgroundHover,
}
const classList = mergeClasses(className, ['ch-rvc', mobile === 'none' ? '' : `mob-${mobile}`]).join(' ')
---

<div class:list={classList} style={styleList} {...rest}>
  <slot name="img" />
  <div class="ch-cnt">
    <div class="ch-ttl"><slot name="title" /></div>
    <div class="ch-bdy"><slot /></div>
  </div>
</div>

<style lang="scss" is:global>
  @use 'sass:list';
  @use '../../config/breakpoint' as bp;

  .ch-rvc {
    position: relative;
  }
  .ch-cnt {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 100%;
    height: 100%;
    max-height: 0;
    min-height: fit-content;
    overflow: hidden;
    background: var(--bg);
    transition: 0.4s ease-in;
    z-index: 1;
  }
  .ch-bdy {
    max-height: 0%;
    overflow: hidden;
    transition: 0.4s linear;
  }
  .ch-rvc:hover .ch-cnt {
    max-height: 100%;
    background: var(--bg-h);
    transition-timing-function: ease;
  }
  .ch-rvc:hover .ch-bdy {
    max-height: 100%;
  }

  // 手動設定尺寸
  $map: md, sm, xs, 2xs;

  @each $size in $map {
    @media (max-width: bp.size($size)) {
      .ch-rvc.mob-#{$size} .ch-cnt {
        position: static;
        max-height: unset;
        height: auto;
        background: var(--bg-h);
        transition-timing-function: ease;
      }
      .ch-rvc.mob-#{$size} .ch-bdy {
        max-height: unset;
      }
    }
  }
</style>
