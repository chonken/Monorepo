---
import BtnSwap from './index.astro'

export const props = {
  class: { type: ['string'], require: false, default: '' },
  href: { type: ['string'], require: false, default: '#' },
  color: { type: ['string'], require: false, default: '#fff', demo: '#000' },
  backgroundColor: { type: ['string'], require: false, default: '#000', demo: '#eee' },
  blank: { type: ['boolean'], require: false, default: false },
  borderColor: { type: ['string'], require: false, default: '#000', demo: '#eee' },
  borderRadius: { type: ['string', 'number'], require: false, default: '0' },
  iconHoverInvert: { type: ['boolean'], require: false, default: false },
  iconReverse: { type: ['boolean'], require: false, default: false },
}
export const slots = ['default']
export const keywords = []
export const categrory = []

const data = Astro.props.data['button']?.[0] ?? {}
---

<BtnSwap href="#" color={props.color.demo} backgroundColor={props.backgroundColor.demo} borderColor={props.borderColor.demo}>
  {data.text}
</BtnSwap>

<style></style>
