---
import BgFixed from './index.astro'

export const props = {
  class: { type: ['string'], require: false, default: '' },
  src: { type: ['string'], require: true, default: '', demo: '{圖片路徑}' },
  minHeight: { type: ['string', 'number'], require: false, default: '40vw' },
}
export const slots = ['default']

const data = Astro.props.data['image']?.[0] ?? {}
---

<BgFixed class='' src={data.image} />

<style is:global></style>
