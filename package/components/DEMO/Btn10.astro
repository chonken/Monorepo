---
import type { ButtonProps } from '../../type/button'
import { mergeClasses } from '../../utils'

export interface Btn10Props extends ButtonProps {
  hoverBorderColor?: string
  hoverBackgroundColor?: string
}
interface Props extends Btn10Props {}

const { href = '#', class: className = '', color = 'inherit', backgroundColor = '#0000', hoverBackgroundColor = '#eef1f6', hoverBorderColor = '#333', blank = false, ...rest } = Astro.props

const styleList = {
  '--clr': color,
  '--bgc': backgroundColor,
  '--bgc-h': hoverBackgroundColor,
  '--bor-c-h': hoverBorderColor,
}
const classList = mergeClasses(className, ['btn_type10'])
---

<a href={href} class:list={classList} style={styleList} target={blank ? '_blank' : undefined} {...rest}>
  <s></s>
  <s></s>
  <s></s>
  <s></s>
  <span><slot>查看更多</slot></span>
</a>

<style lang="scss" is:global>
  .btn_type10 {
    position: relative;
    display: inline-block;
    padding: 0.6em;
    line-height: 1.2;
    color: var(--clr);
    z-index: 1;
    & span {
      padding: 0.3em 1.5em;
      display: block;
    }
    & s {
      content: '';
      position: absolute;
      border: solid var(--bor-c-h);
      transition: 0.5s;
      width: 15px;
      height: 15px;
      opacity: 0;
      z-index: -1;
    }
    & s:nth-of-type(1) {
      top: 0;
      left: 0;
      border-width: 2px 0 0 2px;
      transform: translate(-10px, -10px);
    }
    & s:nth-of-type(2) {
      top: 0;
      right: 0;
      border-width: 2px 2px 0 0;
      transform: translate(10px, -10px);
    }
    & s:nth-of-type(3) {
      bottom: 0;
      left: 0;
      border-width: 0 0 2px 2px;
      transform: translate(-10px, 10px);
    }
    & s:nth-of-type(4) {
      bottom: 0;
      right: 0;
      border-width: 0 2px 2px 0;
      transform: translate(10px, 10px);
    }
    &:hover {
      & s {
        opacity: 1;
        transform: none;
      }
      & span {
        background: var(--bgc-h);
      }
    }
  }
</style>
