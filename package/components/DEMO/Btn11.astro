---
const { href='#' } = Astro.props
let { class: className = '' } = Astro.props
if (className === 'btn_type11') className = ''

const classList = `${className} btn_type11`.trim()
---

<a class={classList} href={href}><slot /></a>

<style is:global>
  a.btn_type11 {
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    flex-wrap: wrap;
    position: relative;
    min-width: 200px;
    background: transparent;
    color: #2B4346;
    font-size: 1rem;
    text-align: center;
    text-transform: uppercase;
    text-decoration: none;
    box-sizing: inherit;
    padding: 10px 20px;
    border: 1px solid;
    box-shadow: inset 0 0 20px rgba(43, 67, 70, 0);
    outline: 1px solid !important;
    outline-color: rgba(43, 67, 70, 0.5);
    outline-offset: 0px;
    text-shadow: none;
    transition: all 1250ms cubic-bezier(0.19, 1, 0.22, 1);
    cursor: pointer;
  }
  a.btn_type11:hover {
    color: #2B4346;
    border: 1px solid;
    box-shadow:
      inset 0 0 20px rgba(43, 67, 70, 0.5),
      0 0 20px rgba(43, 67, 70, 0.2);
    outline: 1px solid !important;
    outline-color: rgba(43, 67, 70, 0) !important;
    outline-offset: 15px;
    text-shadow: 1px 1px 2px #2F3841;
  }
</style>
