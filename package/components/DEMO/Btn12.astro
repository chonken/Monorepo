---
const { href, hover = 'MORE' } = Astro.props
let { class: className = '' } = Astro.props
if (className === 'btn_type12') className = ''

const classList = `${className} btn_type12`.trim()
---

<a class={classList} href={href} data-hover={hover}><span><slot /></span></a>

<style is:global>
  a.btn_type12 {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    flex-wrap: wrap;
    position: relative;
    width: 180px;
    background: #ffffff;
    border: 2px solid #333333;
    overflow: hidden;
    text-align: center;
    cursor: pointer;
    z-index:;
  }
  a.btn_type12 span,
  a.btn_type12:before {
    width: 100%;
    font-size: 1em;
    font-weight: bold;
    text-transform: uppercase;
    transition: all 0.3s ease-in-out;
    padding: var(--pd10);
  }
  a.btn_type12:before {
    content: attr(data-hover);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    transform: translate(-100%, 0);
    display: flex;
    justify-content: center;
    align-items: center;
  }
  a.btn_type12 span {
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    flex-wrap: wrap;
  }
  a.btn_type12:hover span {
    opacity: 0;
    transform: translate(100%, 0);
  }
  a.btn_type12:hover:before {
    opacity: 1;
    transform: translate(0, 0);
  }
</style>
