---
const { href='#' } = Astro.props
let { class: className = '' } = Astro.props
if (className === 'btn_type09') className = ''

const classList = `${className} btn_type09`.trim()
---

<a class={classList} href={href}><span><slot /></span></a>

<style is:global>
  a.btn_type09 {
    position: relative;
    display: block;
    padding: 1em 1.5em;
    width: fit-content;
    color: #fff;
    line-height: 1;
    font-weight: bold;
    overflow: hidden;
    background: #333333;
    z-index: 1;
  }
  .btn_type09 span {
    display: block;
    position: relative;
  }
  .btn_type09 > span {
    overflow: hidden;
  }
  .btn_type09:hover > span > span {
    animation:
      MoveUpInitial 0.2s forwards,
      MoveUpEnd 0.2s forwards 0.2s;
  }
  .btn_type09::before {
    content: '';
    background: #2B4346;
    width: 100%;
    height: 100%;
    transform-origin: 50% 100%;
    -webkit-clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
    transition:
      clip-path 0.2s,
      -webkit-clip-path 0.2s;
    transition-timing-function: cubic-bezier(0.7, 0, 0.2, 1);
    position: absolute;
    left: 0;
    top: 0;
  }
  .btn_type09:hover::before {
    transition-duration: 0.3s;
    -webkit-clip-path: polygon(0 0, 100% 0, 0 0, 0% 100%);
    clip-path: polygon(0 0, 100% 0, 0 0, 0% 100%);
  }
</style>
