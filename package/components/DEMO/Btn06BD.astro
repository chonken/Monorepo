---
import Btn06 from './Btn06.astro'
const { href='#' } = Astro.props
let { class: className = '' } = Astro.props
if (className === 'btn_type06_bd') className = ''

const classList = `${className} btn_type06_bd`.trim()
---

<Btn06 class={classList} href={href}><slot /></Btn06>

<style is:global>
  a.btn_type06_bd span::before {
    top: -2px;
  }
  a.btn_type06_bd span::after {
    bottom: -2px;
  }
  a.btn_type06_bd span {
    border: 2px solid #00b39b;
  }
</style>
