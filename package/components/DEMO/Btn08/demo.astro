---
import Btn08 from './index.astro'

export const id = 'btn_type08'
export const props = {
  href: { type: ['string'], require: false, default: '#', demo: '#' },
  class: { type: ['string'], require: false, default: '' },
  color: { type: ['string'], require: false, default: 'inherit' },
  backgroundColor: { type: ['string'], require: false, default: '#eef1f6', demo: '#888' },
  hoverColor: { type: ['string'], require: false, default: '#fff' },
  hoverBackgroundColor: { type: ['string'], require: false, default: '#2b4346' },
  blank: { type: ['boolean'], require: false, default: false },
}
export const slots = ['default', 'icon']
export const keywords = []
export const categrory = []
const data = Astro.props.data['button']?.[0] ?? {}
---

<Btn08 href={props.href.demo} backgroundColor={props.backgroundColor.demo}>
  {data.text}
</Btn08>
