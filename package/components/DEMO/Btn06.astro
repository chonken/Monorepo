---
const { href='#' } = Astro.props
let { class: className = '' } = Astro.props
if (className === 'btn_type06') className = ''

const classList = `${className} btn_type06`.trim()
---

<a class={classList} href={href}><span><slot /></span></a>

<style is:global>
  a.btn_type06 {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    flex-wrap: wrap;
    width: 180px;
    height: 60px;
    color: #333333;
    position: relative;
    overflow: hidden;
    -moz-transition: ease-out 0.3s 0.3s;
    -o-transition: ease-out 0.3s 0.3s;
    -webkit-transition: ease-out 0.3s;
    -webkit-transition-delay: 0.3s;
    transition: ease-out 0.3s 0.3s;
    text-align: center;
    background: var(--mainBgColor);
    z-index: 1;
  }
  a.btn_type06 span {
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    flex-wrap: wrap;
    padding: var(--pd10);
    width: 100%;
    height: 100%;
  }
  a.btn_type06::before,
  a.btn_type06::after,
  a.btn_type06 span::before,
  a.btn_type06 span::after {
    content: '';
    position: absolute;
    -moz-transition: 0.3s;
    -o-transition: 0.3s;
    -webkit-transition: 0.3s;
    transition: 0.3s;
    background: #2B4346;
    z-index: 5;
  }
  a.btn_type06::before,
  a.btn_type06::after {
    width: 2px;
    height: 100%;
    background: #2B4346;
  }
  a.btn_type06::before {
    left: 0;
    top: 0;
    -moz-transform: translateY(calc(100% + 2px));
    -ms-transform: translateY(calc(100% + 2px));
    -webkit-transform: translateY(calc(100% + 2px));
    transform: translateY(calc(100% + 2px));
  }
  a.btn_type06::after {
    right: 0px;
    bottom: 0;
    -moz-transform: translateY(calc(-100% - 2px));
    -ms-transform: translateY(calc(-100% - 2px));
    -webkit-transform: translateY(calc(-100% - 2px));
    transform: translateY(calc(-100% - 2px));
  }
  a.btn_type06 span::before,
  a.btn_type06 span::after {
    width: 100%;
    height: 2px;
  }
  a.btn_type06 span::before {
    left: 0;
    top: 0;
    -moz-transform: translateX(calc(-100% - 2px));
    -ms-transform: translateX(calc(-100% - 2px));
    -webkit-transform: translateX(calc(-100% - 2px));
    transform: translateX(calc(-100% - 2px));
  }
  a.btn_type06 span::after {
    right: 0;
    bottom: 0;
    -moz-transform: translateX(calc(100% + 2px));
    -ms-transform: translateX(calc(100% + 2px));
    -webkit-transform: translateX(calc(100% + 2px));
    transform: translateX(calc(100% + 2px));
  }
  a.btn_type06:hover::before,
  a.btn_type06:hover::after {
    -moz-transform: translateX(0);
    -ms-transform: translateX(0);
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }
  a.btn_type06:hover span::before,
  a.btn_type06:hover span::after {
    -moz-transform: translateX(0);
    -ms-transform: translateX(0);
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }
</style>
