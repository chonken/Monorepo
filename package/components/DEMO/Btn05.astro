---
import type { ButtonProps } from '../../type/button'
import { mergeClasses } from '../../utils'

export interface Btn05Props extends ButtonProps {
  borderColor?: string
}
interface Props extends Btn05Props {}

const { href = '#', class: className = '', color = 'inherit', backgroundColor = '#333', borderColor = '#333', blank = false, ...rest } = Astro.props

const styleList = {
  '--clr': color,
  '--bgc': backgroundColor,
  '--bor-c': borderColor,
}
const classList = mergeClasses(className, ['btn_type05'])
---

<a href={href} class:list={classList} style={styleList} target={blank ? '_blank' : undefined} {...rest}>
  <slot>查看更多</slot>
</a>

<style lang="scss" is:global>
  .btn_type05 {
    position: relative;
    display: inline-flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    padding: 0.5em 1.5em;
    color: var(--clr);
    &::before,
    &::after {
      content: '';
      position: absolute;
      inset: 0;
      transition: all 0.3s;
    }
    &::before {
      background: var(--bgc);
      z-index: 1;
      opacity: 0.1;
    }
    &::after {
      border: 1px solid var(--bor-c);
      transform: scale(1.5);
      opacity: 0;
    }
    &:hover::before {
      transform: scale(0);
      opacity: 0;
    }
    &:hover:after {
      transform: scale(1);
      opacity: 0.5;
    }
  }
</style>
