---
const { href='#' } = Astro.props
let { class: className = '' } = Astro.props
if (className === 'btn_type08') className = ''

const classList = `${className} btn_type08`.trim()
---

<a class={classList} href={href}><span><slot /></span></a>

<style is:global>
  a.btn_type08 {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    overflow: hidden;
    font-weight: 800;
    font-style: italic;
    color: #333333;
    width: fit-content;
    height: 50px;
    padding: var(--pd10) var(--pd20);
    background: #EEF1F6;
    cursor: pointer;
    z-index: 1;
  }
  a.btn_type08::before,
  a.btn_type08::after {
    content: '';
    background: #2B4346;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
  }
  a.btn_type08::before {
    width: 135%;
    -webkit-clip-path: polygon(75% 0%, 100% 50%, 75% 100%, 0% 100%, 0% 0%);
    clip-path: polygon(75% 0%, 100% 50%, 75% 100%, 0% 100%, 0% 0%);
    transform: translate3d(-100%, 0, 0);
  }
  a.btn_type08::after {
    width: 105%;
    transform: translate3d(100%, 0, 0);
    transition: transform 0.3s cubic-bezier(0.7, 0, 0.2, 1);
  }
  a.btn_type08 span {
    display: block;
    position: relative;
    z-index: 1;
    transition: 0.1s;
  }
  a.btn_type08 > span {
    overflow: hidden;
  }
  a.btn_type08:hover {
    color: #ffffff;
  }
  a.btn_type08:hover > span > span {
    animation:
      MoveRightInitial 0.1s forwards,
      MoveRightEnd 0.3s forwards 0.2s;
  }
  a.btn_type08:hover::before {
    transform: translate3d(0, 0, 0);
    transition: transform 0.3s cubic-bezier(0.7, 0, 0.2, 1);
  }
  a.btn_type08:hover::after {
    transform: translate3d(0, 0, 0);
    transition: transform 0.01s 0.3s cubic-bezier(0.7, 0, 0.2, 1);
  }
  @keyframes MoveRightInitial {
    to {
      transform: translate3d(105%, 0, 0);
    }
  }
  @keyframes MoveRightEnd {
    from {
      transform: translate3d(-100%, 0, 0);
    }
    to {
      transform: translate3d(0, 0, 0);
    }
  }
</style>
