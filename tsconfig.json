{
  "extends": "astro/tsconfigs/strict",
  "files": [],
  "references": [{ "path": "./package/components" }, { "path": "./package/layouts" }, { "path": "./package/utils" }],
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["package/components/*"],
      "@layouts/*": ["package/layouts/*"],
      "@styles/*": ["package/styles/*"],
      "@utils": ["package/utils"],
      "@config/*": ["package/config/*"],
      "@tailwind": ["package/styles/tailwind.css"]
    },
    "types": ["astro/client"]
  }
}
